@{
    ViewData["Title"] = "List Convertations";
    Layout = "_PanelLayout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    @*<h1>Users</h1>
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#createModal">Create</button>*@
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/Panel/">Panel</a></li>
                        <li class="breadcrumb-item active">Convertations</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">List Convertations</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="tableConvertations" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>DateTime</th>
                                        <th>Message</th>
                                        <th>CaseName</th>
                                        <th>User</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section scripts {
    <script src="~/js/convertations.js" asp-append-version="true"></script>
}